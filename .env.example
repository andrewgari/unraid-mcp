# Unraid MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: Unraid API URL (your Unraid server's GraphQL endpoint)
UNRAID_API_URL=https://your-unraid-server.local/api/graphql

# Required: Unraid API Key (generate from Unraid web interface)
UNRAID_API_KEY=your-api-key-here

# Optional: Server configuration
UNRAID_MCP_PORT=6970
UNRAID_MCP_HOST=0.0.0.0
UNRAID_MCP_TRANSPORT=streamable-http

# Optional: SSL verification (true, false, or path to CA bundle)
UNRAID_VERIFY_SSL=true

# Optional: Logging configuration
UNRAID_MCP_LOG_LEVEL=INFO
UNRAID_MCP_LOG_FILE=unraid-mcp.log 